{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SwanLab Self-Hosted Values Schema",
  "type": "object",
  "properties": {
    "nameOverride": { "type": "string" },
    "fullnameOverride": { "type": "string" },

    "global": {
      "type": "object",
      "properties": {
        "imagePullSecrets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": { "name": { "type": "string" } },
            "required": ["name"]
          }
        },
        "clusterDomain": { "type": "string", "default": "cluster.local" },
        "podAntiAffinityPreset": {
          "type": "string",
          "enum": ["soft", "hard", "none"]
        },
        "settings": {
          "type": "object",
          "properties": {
            "loginHost": { "type": "string" }
          }
        }
      }
    },

    "gateway": {
      "type": "object",
      "properties": {
        "fullnameOverride": { "type": "string" },
        "replicas": { "type": "integer", "minimum": 0 },
        "image": { "$ref": "#/definitions/image" },
        "identifyImage": { "$ref": "#/definitions/image" },
        "customLabels": { "type": "object" },
        "customAnnotations": { "type": "object" },
        "customTolerations": { "type": "array" },
        "customNodeSelector": { "type": "object" },
        "resources": { "$ref": "#/definitions/resources" }
      }
    },

    "helper": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "pullPolicy": { "$ref": "#/definitions/pullPolicy" }
      }
    },

    "service": {
      "type": "object",
      "properties": {
        "server": { "$ref": "#/definitions/standardService" },
        "cloud": { "$ref": "#/definitions/standardService" },
        "next": { "$ref": "#/definitions/standardService" },
        "house": {
          "type": "object",
          "properties": {
            "fullnameOverride": { "type": "string" },
            "replicas": { "type": "integer", "minimum": 0 },
            "image": { "$ref": "#/definitions/image" },
            "logImage": { "$ref": "#/definitions/image" },
            "fbImage": { "$ref": "#/definitions/image" },
            "logResources": { "$ref": "#/definitions/resources" },
            "fbResources": { "$ref": "#/definitions/resources" },
            "persistence": { "$ref": "#/definitions/persistence" },
            "retainPVC": { "type": "boolean" },
            "customLabels": { "type": "object" },
            "customAnnotations": { "type": "object" },
            "customTolerations": { "type": "array" },
            "customNodeSelector": { "type": "object" },
            "resources": { "$ref": "#/definitions/resources" }
          }
        }
      }
    },

    "dependencies": {
      "type": "object",
      "description": "Internal infrastructure configuration",
      "properties": {
        "postgres": {
          "type": "object",
          "properties": {
            "fullnameOverride": { "type": "string" },
            "image": { "$ref": "#/definitions/image" },
            "username": { "type": "string" },
            "password": { "type": "string" },
            "persistence": { "$ref": "#/definitions/persistence" },
            "resources": { "$ref": "#/definitions/resources" },
            "customLabels": { "type": "object" },
            "customAnnotations": { "type": "object" },
            "customTolerations": { "type": "array" },
            "customNodeSelector": { "type": "object" }
          }
        },
        "redis": {
          "type": "object",
          "properties": {
            "fullnameOverride": { "type": "string" },
            "image": { "$ref": "#/definitions/image" },
            "persistence": { "$ref": "#/definitions/persistence" },
            "resources": { "$ref": "#/definitions/resources" },
            "customLabels": { "type": "object" },
            "customAnnotations": { "type": "object" },
            "customTolerations": { "type": "array" },
            "customNodeSelector": { "type": "object" }
          }
        },
        "clickhouse": {
          "type": "object",
          "properties": {
            "fullnameOverride": { "type": "string" },
            "image": { "$ref": "#/definitions/image" },
            "username": { "type": "string" },
            "password": { "type": "string" },
            "persistence": { "$ref": "#/definitions/persistence" },
            "resources": { "$ref": "#/definitions/resources" },
            "customLabels": { "type": "object" },
            "customAnnotations": { "type": "object" },
            "customTolerations": { "type": "array" },
            "customNodeSelector": { "type": "object" }
          }
        },
        "s3": {
          "type": "object",
          "properties": {
            "fullnameOverride": { "type": "string" },
            "image": { "$ref": "#/definitions/image" },
            "mcImage": { "$ref": "#/definitions/image" },
            "accessKey": { "type": "string" },
            "secretKey": { "type": "string" },
            "persistence": { "$ref": "#/definitions/persistence" },
            "resources": { "$ref": "#/definitions/resources" },
            "customLabels": { "type": "object" },
            "customAnnotations": { "type": "object" },
            "customTolerations": { "type": "array" },
            "customNodeSelector": { "type": "object" }
          }
        }
      }
    },

    "integrations": {
      "type": "object",
      "description": "External infrastructure connection settings",
      "properties": {
        "postgres": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "host": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "database": { "type": "string" },
            "existingSecret": { "type": "string" }
          }
        },
        "redis": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "host": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "database": { "type": "integer", "minimum": 0, "maximum": 15 },
            "existingSecret": { "type": "string" }
          }
        },
        "clickhouse": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "host": { "type": "string" },
            "httpPort": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "tcpPort": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "database": { "type": "string" },
            "existingSecret": { "type": "string" }
          }
        },
        "s3": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "existingSecret": { "type": "string" },
            "public": { "$ref": "#/definitions/s3PublicConfig" },
            "private": { "$ref": "#/definitions/s3PrivateConfig" }
          }
        }
      }
    }
  },

  "definitions": {
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "pullPolicy": { "$ref": "#/definitions/pullPolicy" }
      }
    },
    "pullPolicy": {
      "type": "string",
      "enum": ["Always", "IfNotPresent", "Never"]
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": { "type": "object" },
        "requests": { "type": "object" }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "storageClass": { "type": "string" },
        "storageSize": {
          "type": "string",
          "pattern": "^[0-9]+(Gi|Mi|Ti)$",
          "description": "Must be a valid K8s quantity like 10Gi, 100Mi"
        },
        "existingClaim": { "type": "string" }
      }
    },
    "standardService": {
      "type": "object",
      "properties": {
        "fullnameOverride": { "type": "string" },
        "replicas": { "type": "integer", "minimum": 0 },
        "image": { "$ref": "#/definitions/image" },
        "customLabels": { "type": "object" },
        "customAnnotations": { "type": "object" },
        "customTolerations": { "type": "array" },
        "customNodeSelector": { "type": "object" },
        "resources": { "$ref": "#/definitions/resources" }
      }
    },
    "s3PrivateConfig": {
      "type": "object",
      "properties": {
        "ssl": { "type": "boolean" },
        "endpoint": { "type": "string" },
        "region": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "pathStyle": { "type": "boolean" },
        "bucket": { "type": "string" }
      },
      "required": ["bucket", "endpoint", "region", "port", "pathStyle", "ssl"]
    },
    "s3PublicConfig": {
      "type": "object",
      "properties": {
        "ssl": { "type": "boolean" },
        "endpoint": { "type": "string" },
        "region": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "pathStyle": { "type": "boolean" },
        "bucket": { "type": "string" },
        "domain": { "type": "string", "format": "uri-reference" }
      },
      "required": ["bucket", "endpoint", "region", "port", "pathStyle", "ssl", "domain"]
    }
  }
}