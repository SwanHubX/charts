{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SwanLab Helm Chart Values",
  "description": "Schema for SwanLab Helm Chart configuration",
  "type": "object",
  "properties": {
    "nameOverride": { "type": "string" },
    "fullnameOverride": { "type": "string" },
    "global": {
      "type": "object",
      "properties": {
        "imagePullSecrets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": { "name": { "type": "string" } },
            "required": ["name"]
          }
        },
        "clusterDomain": { "type": "string", "default": "cluster.local" },
        "podAntiAffinityPreset": {
          "type": "string",
          "enum": ["soft", "hard", "none"],
          "description": "Configures how pods are distributed across nodes."
        },
        "settings": {
          "type": "object",
          "properties": {
            "loginHost": { "type": "string" }
          }
        }
      }
    },
    "gateway": {
      "type": "object",
      "properties": {
        "fullnameOverride": { "type": "string" },
        "replicas": { "type": "integer", "minimum": 0 },
        "image": { "$ref": "#/definitions/image" },
        "identifyImage": { "$ref": "#/definitions/image" },
        "resources": { "$ref": "#/definitions/resources" }
      }
    },
    "helper": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "pullPolicy": { "$ref": "#/definitions/pullPolicy" }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "server": { "$ref": "#/definitions/serviceComponent" },
        "cloud": { "$ref": "#/definitions/serviceComponent" },
        "next": { "$ref": "#/definitions/serviceComponent" },
        "house": {
          "type": "object",
          "properties": {
            "fullnameOverride": { "type": "string" },
            "replicas": { "type": "integer", "minimum": 0 },
            "image": { "$ref": "#/definitions/image" },
            "logImage": { "$ref": "#/definitions/image" },
            "fbImage": { "$ref": "#/definitions/image" },
            "persistence": { "$ref": "#/definitions/persistence" },
            "retainPVC": { "type": "boolean" },
            "resources": { "$ref": "#/definitions/resources" }
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Internal infrastructure managed by the Chart",
      "properties": {
        "postgres": {
          "type": "object",
          "properties": {
            "image": { "$ref": "#/definitions/image" },
            "username": { "type": "string" },
            "password": { "type": "string" },
            "persistence": { "$ref": "#/definitions/persistence" }
          }
        },
        "redis": {
          "type": "object",
          "properties": {
            "image": { "$ref": "#/definitions/image" },
            "persistence": { "$ref": "#/definitions/persistence" }
          }
        },
        "clickhouse": {
          "type": "object",
          "properties": {
            "image": { "$ref": "#/definitions/image" },
            "username": { "type": "string" },
            "password": { "type": "string" },
            "persistence": { "$ref": "#/definitions/persistence" },
            "resources": { "$ref": "#/definitions/resources" }
          }
        },
        "s3": {
          "type": "object",
          "properties": {
            "image": { "$ref": "#/definitions/image" },
            "mcImage": { "$ref": "#/definitions/image" },
            "accessKey": { "type": "string" },
            "secretKey": { "type": "string" },
            "persistence": { "$ref": "#/definitions/persistence" }
          }
        }
      }
    },
    "integrations": {
      "type": "object",
      "description": "Configuration for external infrastructure",
      "properties": {
        "postgres": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "host": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "database": { "type": "string" },
            "existingSecret": { "type": "string" }
          }
        },
        "redis": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "host": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "database": { "type": "integer", "minimum": 0, "maximum": 15 },
            "existingSecret": { "type": "string" }
          }
        },
        "clickhouse": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "host": { "type": "string" },
            "httpPort": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "tcpPort": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "database": { "type": "string" },
            "existingSecret": { "type": "string" }
          }
        },
        "s3": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "existingSecret": { "type": "string" },
            "public": { "$ref": "#/definitions/s3Config" },
            "private": { "$ref": "#/definitions/s3Config" }
          }
        }
      }
    }
  },
  "definitions": {
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "pullPolicy": { "$ref": "#/definitions/pullPolicy" }
      }
    },
    "pullPolicy": {
      "type": "string",
      "enum": ["Always", "IfNotPresent", "Never"]
    },
    "serviceComponent": {
      "type": "object",
      "properties": {
        "fullnameOverride": { "type": "string" },
        "replicas": { "type": "integer", "minimum": 0 },
        "image": { "$ref": "#/definitions/image" },
        "resources": { "$ref": "#/definitions/resources" },
        "customLabels": { "type": "object" },
        "customAnnotations": { "type": "object" },
        "customTolerations": { "type": "array" },
        "customNodeSelector": { "type": "object" }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": { "type": "object" },
        "requests": { "type": "object" }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "storageClass": { "type": "string" },
        "storageSize": {
          "type": "string",
          "pattern": "^[0-9]+(Gi|Mi|Ti)$",
          "description": "Size of the volume (e.g. 10Gi)"
        },
        "existingClaim": { "type": "string" }
      }
    },
    "s3Config": {
      "type": "object",
      "properties": {
        "ssl": { "type": "boolean" },
        "endpoint": { "type": "string" },
        "region": { "type": "string" },
        "port": { "type": "integer" },
        "domain": { "type": "string" },
        "pathStyle": { "type": "boolean" },
        "bucket": { "type": "string" }
      }
    }
  }
}